<div class="main">
  <% if (user && user.isAdmin) { %>
    <h1>Congratulations! You have been given admin previleges. </h1>
  <% } else { %>
    <div class="form-div">
      <% if (authError) { %>
        <h3><%- authError %></h3>
      <% } %>
      <form class="form" action="" method="post">
        <label for="becomeAdmin"><h2>Enter the secret password to have admin previleges.</h2> </label>
        <input type="password" class="su-li-input" id="becomeAdmin" name="becomeAdmin" placeholder="Enter Secret Code">
        <% if (error) { %>
            <div error-message><%= error[0].msg %></div>
          <% } %>
        <div class="form-buttons">
          <button type="submit">Submit</button>
          <a href="/"><button type="button">Cancel</button></a>
        </div>
      </form>
    </div>
  <% } %>
</div>