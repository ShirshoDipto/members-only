<div class="main">
    <div class="form-div">
      <% if (authError) { %>
        <h3><%- authError %></h3>
      <% } %>
      <form class="form" action="" method="post">
        <input type="email" class="su-li-input" id="logInEmail" name="username" placeholder="Enter Your Email">
        <% if (validationError) { %>
          <% for (let error of validationError) { %>
            <% if (error.param === "logInEmail") { %>
              <div error-message><%= error.msg %></div>
            <% } %>
          <% } %>
        <% } %>
        <input type="password" class="su-li-input" id="logInPassword" name="password" placeholder="Password">
        <% if (validationError) { %>
          <% for (let error of validationError) { %>
            <% if (error.param === "logInPassword") { %>
              <div error-message><%= error.msg %></div>
            <% } %>
          <% } %>
        <% } %>
        
        <div class="form-buttons">
          <button type="submit">Submit</button>
          <a href="/"><button type="button">Cancel</button></a>
        </div>
      </form>
      <div>Don't have an account? <a href="/sign-up">Sign up</a></div>
    </div>
</div>
