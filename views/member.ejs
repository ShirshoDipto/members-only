<div class="main">
  <% if (user && user.isMember) { %>
    <h1>Congratulations! You are already a Member. </h1>
  <% } else { %>
    <div class="form-div">
      <% if (authError) { %>
        <h3><%- authError %></h3>
      <% } %>
      <form class="form" action="" method="post">
        <label for="becomeMember"><h2>Enter the secret password to become a member.</h2> </label>
        <input type="password" class="su-li-input" id="becomeMember" name="becomeMember" placeholder="Enter Secret Code">
        <% if (error) { %>
            <div error-message><%= error[0].msg %></div>
          <% } %>
        <div class="form-buttons">
          <button type="submit">Submit</button>
          <a href="/"><button type="button">Cancel</button></a>
        </div>
      </form>
    </div>
  <% } %>
  
</div>