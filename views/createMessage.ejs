<div class="main">
  <div class="form-div">
    <% if (authError) { %>
      <h3><%- authError %></h3>
    <% } %>
    <form class="form" action="" method="post">
      <input type="text" id="messageTitle" name="messageTitle" placeholder="Title">
      <% if (validationError) { %>
        <% for (let error of validationError) { %>
          <% if (error.param === "messageTitle") { %>
            <div error-message><%= error.msg %></div>
          <% } %>
        <% } %>
      <% } %>
      <textarea name="messageText" id="messageText" cols="30" rows="10" placeholder="Write your message"></textarea>
      <% if (validationError) { %>
        <% for (let error of validationError) { %>
          <% if (error.param === "messageText") { %>
            <div error-message><%= error.msg %></div>
          <% } %>
        <% } %>
      <% } %>
      <div class="form-buttons">
        <button type="submit">Submit</button>
        <a href="/"><button type="button">Cancel</button></a>
      </div>
    </form>
  </div>
</div>
